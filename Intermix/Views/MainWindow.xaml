<Window x:Class="Intermix.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Intermix" xmlns:fa="http://schemas.fontawesome.com/icons/"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280" ResizeMode="CanResizeWithGrip" WindowStyle="None" WindowStartupLocation="CenterScreen"
        Background="Transparent" AllowsTransparency="True" FontWeight="SemiBold">
    
    <Border Background="{StaticResource MW_Background}">
        
        <!-- Górny pasek -->
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="14*"/>
            </Grid.RowDefinitions>
            
            <Grid VerticalAlignment="Stretch" MouseDown="Drag_MouseDown" >

                <Label Margin="5 0 0 0" VerticalAlignment="Stretch" Foreground="{DynamicResource MW_Font}" FontSize="20" FontWeight="Light">InterMIX</Label>

                <Grid Width="150" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0 0 5 0">
                    <Button fa:Awesome.Content="Regular_WindowMinimize" HorizontalAlignment="Left" FontWeight="SemiBold" Click="Minimize_Click" Style="{StaticResource WindowBarButtons}"/>
                    <Button fa:Awesome.Content="Regular_WindowMaximize" Click="Maximize_Click" HorizontalAlignment="Center" Style="{StaticResource WindowBarButtons}"/>
                    <Button Content="✖" Click="Exit_Click" HorizontalAlignment="Right" Style="{StaticResource WindowBarButtons}"/>
                </Grid>
            </Grid>
                
        <!-- Środek -->

            <Grid Grid.Row="1">
        
                <Frame Name="frame" NavigationUIVisibility="Hidden" Source="../../Pages/MainWindow/ChooseActivity.xaml"/>
                
            </Grid>
            
            
        </Grid>
            
        
    </Border>
</Window>
