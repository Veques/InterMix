<Page x:Class="Intermix.Pages.LibrarySystem.MainLibraryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Intermix.Pages.LibrarySystem" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
      xmlns:librarysystem="clr-namespace:Intermix.ViewModels.LibrarySystem" d:DataContext="{d:DesignInstance Type=librarysystem:MainLibraryPageViewModel}"
      mc:Ignorable="d" Name="Window"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainLibraryPage">

    <Grid>

        <materialDesign:DrawerHost Grid.RowSpan="2" x:Name="DrawerHost" Width="260" 
                                        Height="{Binding ElementName=Window, Path=ActualHeight}" HorizontalAlignment="Left" VerticalAlignment="Center" 
                                        LeftDrawerCornerRadius="0 10 10 0" >

            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left">
                <Button Command="{x:Static materialDesign:DrawerHost.OpenDrawerCommand}" CommandParameter="{x:Static Dock.Left}" HorizontalAlignment="Left">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Twój Profil"/>
                            <materialDesign:PackIcon Kind="ArrowRightBold"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
            </StackPanel>
            <materialDesign:DrawerHost.LeftDrawerContent>
                <StackPanel Width="260">
                    
                    <TextBlock Margin="0 20" HorizontalAlignment="Center" FontWeight="SemiBold" FontSize="17" Text="{Binding LoggedUser}" />
                    <!--<TextBlock HorizontalAlignment="Left" Margin="3 0 0 0" FontSize="11" Text="Wypożyczono"/>-->
                    
                    <TreeView Width="260" DisplayMemberPath="Title" ItemsSource="{Binding LoanedBooks}">
                        <materialDesign:TreeViewAssist.AdditionalTemplate>
                            <DataTemplate>
                                <Grid TextElement.FontSize="10" TextElement.FontStyle="Italic" Margin="8 0 0 0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                        <TextBlock FontWeight="DemiBold" Text="Autor: " />
                                        <TextBlock Text="{Binding Author}" />
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left">
                                        <TextBlock FontWeight="DemiBold" Text="Wypożyczono: "/>
                                        <TextBlock HorizontalAlignment="Right" Text="12.10.1999r." />
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal">
                                        <TextBlock FontWeight="DemiBold" Text="Data oddania: " />
                                        <TextBlock Text="12.10.1999r." />
                                    </StackPanel>

                                    
                                </Grid>
                            </DataTemplate>
                        </materialDesign:TreeViewAssist.AdditionalTemplate>

                    </TreeView>


                    <Button Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}" CommandParameter="{x:Static Dock.Left}" 
                                Margin="4" HorizontalAlignment="Center"
                                Style="{StaticResource MaterialDesignFlatButton}" Content="CLOSE THIS" />

                </StackPanel>
            </materialDesign:DrawerHost.LeftDrawerContent >

        </materialDesign:DrawerHost>

        <UniformGrid Width="350" Height="320" VerticalAlignment="Bottom" Columns="2">

            <Button Background="Green" Style="{StaticResource LMS_MainButtons}" Click="LoanBooks_Click" >
                <Button.Content>
                    <StackPanel>
                        <materialDesign:PackIcon Kind="BookArrowRight" Width="70" Height="70" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Text="Wypożycz książki" VerticalAlignment="Center" Margin="0 5 0 0" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button.Content>
            </Button>
            <Button Background="Yellow" Style="{StaticResource LMS_MainButtons}" Click="ReturnBooks_Click" >
                <Button.Content>
                    <StackPanel>
                        <materialDesign:PackIcon Kind="BookArrowLeft" Width="70" Height="70" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Text="Oddaj książki" VerticalAlignment="Center" Margin="0 5 0 0" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button.Content>
            </Button>
            <Button Background="red" Style="{StaticResource LMS_MainButtons}" Click="BrowseBooks_Click" >
                <Button.Content>
                    <StackPanel>
                        <materialDesign:PackIcon Kind="BookSearch" Width="70" Height="70" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Text="Przeglądaj książki" VerticalAlignment="Center" Margin="0 5 0 0" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button.Content>
            </Button>
            <Button Background="red" Style="{StaticResource LMS_MainButtons}" Click="AdminPage_Click" >
                <Button.Content>
                    <StackPanel>
                        <materialDesign:PackIcon Kind="StarCircle" Width="70" Height="70" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Text="Admin" VerticalAlignment="Center" Margin="0 5 0 0" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button.Content>
            </Button>
        </UniformGrid>


    </Grid>
</Page>
